<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView_cd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiều dài:"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="4dp" />

    <EditText
        android:id="@+id/editText_cd"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="23dp" />

    <TextView
        android:id="@+id/textView_cr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chiều rộng:"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="4dp" />

    <EditText
        android:id="@+id/editText_cr"
        android:layout_width="145dp"
        android:layout_height="46dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="23dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_cv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chu vi" />

        <Button
            android:id="@+id/button_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Diện tích" />


    </LinearLayout>

    <TextView
        android:id="@+id/textView_kq"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Kết quả: "
        android:textSize="24sp" />
</LinearLayout>